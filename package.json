{
  "name": "taskflow-lite",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=taskflow-production --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",

    "preview": "wrangler pages dev dist",

    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name taskflow-lite",

    "cf-typegen": "wrangler types --env-interface CloudflareBindings",

    "db:migrate:local": "wrangler d1 migrations apply taskflow-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply taskflow-production",

    "db:console:local": "wrangler d1 execute taskflow-production --local",
    "db:console:prod": "wrangler d1 execute taskflow-production",

    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true"
  },
  "dependencies": {
    "hono": "^4.10.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250705.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.7.3",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
